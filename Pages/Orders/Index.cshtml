@page
@model TeknoForce.Pages.Admin.Orders.IndexModel
@{
    ViewData["Title"] = "Siparişler";
    Layout = "_AdminLayout";
}

<h3>Siparişler</h3>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Sipariş No</th>
            <th>Tarih</th>
            <th>Toplam Tutar</th>
            <th>Durum</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.OrderNumber</td>
                <td>@order.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@order.TotalAmount.ToString("N2") ₺</td>
                <td>
                    <span class="badge"
                          style="background-color:@order.OrderStatus.ColorCode">
                        @order.OrderStatus.Name
                    </span>
                </td>
                <td>
                    <a asp-page="Details"
                       asp-route-id="@order.OrderId"
                       class="btn btn-sm btn-primary">
                        Detay
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
