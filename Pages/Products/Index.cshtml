@page
@model TeknoForce.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Ürünler";
    Layout = "_AdminLayout";
}

<h3>Ürünler</h3>
<form method="get" class="row g-2 mb-3">

    <div class="col-md-3">
        <select asp-for="BrandId"
                asp-items="Model.BrandList"
                class="form-select">
            <option value="">Tüm Markalar</option>
        </select>
    </div>

    <div class="col-md-3">
        <select asp-for="CategoryId"
                asp-items="Model.CategoryList"
                class="form-select">
            <option value="">Tüm Kategoriler</option>
        </select>
    </div>

    <div class="col-md-3">
        <select asp-for="IsActive" class="form-select">
            <option value="">Tümü</option>
            <option value="true">Aktif</option>
            <option value="false">Pasif</option>
        </select>
    </div>

    <div class="col-md-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">
            Filtrele
        </button>

        <a asp-page="./Index" class="btn btn-outline-secondary">
            Temizle
        </a>
    </div>

</form>


<div class="mb-3">
    <a asp-page="./Edit" class="btn btn-success">
        + Yeni Ürün
    </a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Ürün</th>
            <th>Marka</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Durum</th>
            <th>Özet</th>
            <th>Görsel</th>
            <th>İşlem</th>
        </tr>
    </thead>

    <tbody>
        @if (Model.Products.Any())
        {
            foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ProductId</td>

                    <td>
                        <strong>@product.Name</strong>
                    </td>

                    <td>@product.Brand?.Name</td>
                    <td>@product.Category?.Name</td>

                    <td>@product.Price ₺</td>
                    <td>@product.Stock</td>

                    <td>
                        <form method="post" asp-page-handler="ToggleStatus">
                            <input type="hidden" name="id" value="@product.ProductId" />
                            <button type="submit"
                                    class="btn btn-sm @(product.IsActive ? "btn-success" : "btn-secondary")">
                                @(product.IsActive ? "Aktif" : "Pasif")
                            </button>
                        </form>
                    </td>

                    <td style="font-size:13px">
                        @if (product.Specification != null)
                        {
                            <div><strong>Motor:</strong> @product.Specification.MotorPowerHP</div>
                            <div><strong>Ağırlık:</strong> @product.Specification.WeightKg kg</div>
                        }
                        else
                        {
                            <span class="text-muted">—</span>
                        }
                    </td>

                    <td class="text-center">
                        @if (product.Images.Any(i => i.IsCover))
                        {
                            <span class="text-success">✔ Kapak</span>
                        }
                        else
                        {
                            <span class="text-muted">—</span>
                        }
                    </td>

                    <td>
                        <a asp-page="./Edit"
                           asp-route-id="@product.ProductId"
                           class="btn btn-sm btn-primary">
                            Düzenle
                        </a>
                        <form method="post"
                              asp-page-handler="Delete"
                              onsubmit="return confirm('Bu ürünü silmek istediğine emin misin?');"
                              class="d-inline">

                            <input type="hidden" name="id" value="@product.ProductId" />

                            <button type="submit" class="btn btn-sm btn-danger">
                                Sil
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="10" class="text-center text-muted">
                    Henüz ürün eklenmedi.
                </td>
            </tr>
        }
    </tbody>



</table>  
