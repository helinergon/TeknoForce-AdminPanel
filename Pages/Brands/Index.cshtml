@page
@model TeknoForce.Pages.Brands.IndexModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Markalar";
}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Markalar</h5>

        <!-- Şimdilik pasif, sonra açacağız -->
        <button class="btn btn-sm btn-primary" disabled>
            + Yeni Marka
        </button>
    </div>

    <div class="card-body">
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th style="width:80px">#</th>
                    <th>Marka Adı</th>
                    <th>Logo</th>
                    <th>Açıklama</th>
                    <th style="width:120px">Durum</th>
                    <th style="width:150px">Oluşturma</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var brand in Model.Brands)
                {
                    <tr>
                        <td>@brand.BrandId</td>
                        <td>@brand.Name</td>
                        <td>
                            @if (!string.IsNullOrEmpty(brand.LogoPath))
                            {
                                <img src="@brand.LogoPath" 
                                     style="height:50px;"/>    
                            }
                        </td>
                        <td>@brand.Description</td>
                        <td>
                            @if (brand.IsActive)
                            {
                                <span class="status active">
                                    <i class="fa-solid fa-circle-check"></i> Aktif
                                </span>
                            }
                            else
                            {
                                <span class="status passive">
                                    <i class="fa-solid fa-circle-xmark"></i> Pasif
                                </span>
                            }
                        </td>
                        <td>
                        <small class="update-time">
                        🕒 @((brand.UpdatedDate ?? brand.CreatedDate)
                                                .ToString("dd.MM.yyyy HH:mm"))
                        </small>
                        </td>
                        <td>
                            <a asp-page="./Edit"
                            asp-route-id="@brand.BrandId"
                               class="btn btn-sm btn-primary">
                            Düzenle
                           </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
